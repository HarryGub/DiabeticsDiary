<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.usertransfer.UserTransferFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                style="@style/TextBlackHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_user_transfer_header"
                android:gravity="center"
                android:id="@+id/frag_user_transfer_header"/>
            <TextView
                style="@style/TextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/frag_user_transfer_header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingHorizontal="10dp"
                android:text="@string/frag_user_transfer_body"
                android:gravity="center"
                android:id="@+id/frag_user_transfer_body"/>

            <Button
                style="@style/ButtonAccept"
                app:layout_constraintTop_toBottomOf="@+id/frag_user_transfer_body"
                android:text="@string/frag_user_transfer_button_xslx"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:id="@+id/frag_user_transfer_button_xslx" />
            <Button
                style="@style/ButtonAccept"
                app:layout_constraintTop_toBottomOf="@+id/frag_user_transfer_button_xslx"
                android:text="@string/frag_user_transfer_button"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/frag_user_transfer_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>