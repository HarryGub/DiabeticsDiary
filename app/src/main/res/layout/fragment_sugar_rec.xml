<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/frag_food_height"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextBlackUnconstrained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_sugar_rec_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/frag_sugar_rec_time"/>

            <TextView
                style="@style/TextBlackUnconstrained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_sugar_rec_val"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/frag_sugar_rec_val"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/TextBlackUnconstrained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_sugar_rec_isBefore"
            android:id="@+id/frag_sugar_rec_isBefore"
            android:layout_marginTop="5dp"/>

        <TextView
            style="@style/TextBlackUnconstrained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_sugar_rec_note"
            android:id="@+id/frag_sugar_rec_note"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>