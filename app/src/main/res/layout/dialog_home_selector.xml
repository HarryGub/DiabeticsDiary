<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        style="@style/TextBlackUnconstrained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:text="@string/home_selector_dialog_header"
        android:id="@+id/home_selector_dialog_header"/>

    <ImageView
        android:layout_width="@dimen/bottom_menu_item_size"
        android:layout_height="@dimen/bottom_menu_item_size"
        android:src="@drawable/notification_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_header"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:id="@+id/home_selector_dialog_notification_icon"/>

    <TextView
        style="@style/TextBlackMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_notification_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/home_selector_dialog_notification_icon"
        app:layout_constraintLeft_toLeftOf="@+id/home_selector_dialog_notification_icon"
        android:text="Уведомления"/>

    <ImageView
        android:layout_width="@dimen/bottom_menu_item_size"
        android:layout_height="@dimen/bottom_menu_item_size"
        android:src="@drawable/sugar_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_header"
        android:id="@+id/home_selector_dialog_sugar_icon"/>

    <TextView
        style="@style/TextBlackMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_sugar_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/home_selector_dialog_sugar_icon"
        app:layout_constraintLeft_toLeftOf="@+id/home_selector_dialog_sugar_icon"
        android:text="Сахар"/>

    <ImageView
        android:layout_width="@dimen/bottom_menu_item_size"
        android:layout_height="@dimen/bottom_menu_item_size"
        android:src="@drawable/kalories_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_header"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/home_selector_dialog_calories_icon"/>

    <TextView
        style="@style/TextBlackMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/home_selector_dialog_calories_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/home_selector_dialog_calories_icon"
        app:layout_constraintLeft_toLeftOf="@+id/home_selector_dialog_calories_icon"
        android:text="Калории"/>


</androidx.constraintlayout.widget.ConstraintLayout>