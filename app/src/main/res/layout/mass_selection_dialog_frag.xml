<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/mass_selection_dialog_frag_edit_text"
        android:id="@+id/mass_selection_dialog_frag_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:maxLength="5"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp"/>

    <TextView
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mass_selection_dialog_frag_edit_text"
        android:text="@string/mass_selection_dialog_frag_portion"
        android:id="@+id/mass_selection_dialog_frag_portion"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonPinkMain"
        android:text="@string/mass_selection_dialog_frag_button"
        android:id="@+id/mass_selection_dialog_frag_button"
        app:layout_constraintTop_toBottomOf="@+id/mass_selection_dialog_frag_portion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>